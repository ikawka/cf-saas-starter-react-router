{
  "name": "react-router-test",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "cf-typegen": "wrangler types",
    "deploy": "bun run build && wrangler deploy",
    "dev": "bun run db:migrate:local && react-router dev",
    "postinstall": "npm run cf-typegen",
    "preview": "bun run build && vite preview",
    "typecheck": "npm run cf-typegen && react-router typegen && tsc -b",
    "typegen": "wrangler types && react-router typegen",
    "auth:generate": "@better-auth/cli generate --config auth.config.ts",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply react-router-test-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply react-router-test-db --remote",
    "setup": "bun run scripts/first-time-setup.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@libsql/client": "^0.15.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-router": "^1.134.9",
    "@tanstack/react-router-ssr-query": "^1.134.9",
    "@trpc/client": "^11.7.1",
    "@trpc/react-query": "^11.7.1",
    "@trpc/server": "^11.7.1",
    "@trpc/tanstack-react-query": "^11.7.1",
    "better-auth": "^1.3.34",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "isbot": "^5.1.31",
    "lucide-react": "^0.552.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.66.0",
    "react-router": "^7.9.2",
    "superjson": "^2.2.5",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@clack/prompts": "^0.11.0",
    "@cloudflare/vite-plugin": "^1.13.5",
    "@cloudflare/workers-types": "^4.20251014.0",
    "@react-router/dev": "^7.9.2",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^24.10.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "drizzle-kit": "^0.31.6",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.45.3"
  }
}
